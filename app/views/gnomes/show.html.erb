<%= @gnome.name %>

<div class="col-12 col-sm-6 col-md-4 col-lg-3">
  <div class="card mb-4">
    <div class="card-body">
      <h5 class="card-title"><%= @gnome.name %></h5>
      <p class="card-text"><%= @gnome.description %></p>
      <h5 class="card-title">Â£ <%= @gnome.price %></h5>
    </div>
  </div>
</div>

<h2><%= @gnome.name %> has been booked across the following dates: </h2>
<ul>
  <% if @gnome.bookings.length > 0 %>
    <% @gnome.bookings.each do |booking| %>
      <li><%= booking.booking_date %></li>
    <% end %>
  <% else %>
    <li>Be the first to make a booking!</li>
  <% end %>
</ul>

<%= simple_form_for [@gnome, @booking] do |f| %>
  <%= f.input :booking_date %>
  <%= f.submit "Create booking :D" %>
<% end %>
