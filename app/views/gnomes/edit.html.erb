<h1>Edit Gnome Details</h1>
<%= simple_form_for(@gnome) do |f|%>
<div>
  <%= f.label :name %>
  <%= f.text_field :name %>
</div>

<div>
  <%= f.label :description %>
  <%= f.text_field :description %>
</div>

<div>
  <%= f.label :price %>
  <%= f.text_field :price %>
</div>

<div>
  <%= f.label :image_path %>
  <%= f.text_field :image_path %>
</div>
  <%= f.submit %>
<% end %>
