<%= simple_form_for @gnome do |f| %>
<%= f.input :name, placeholder: "Your gnomes name:" %>
<%= f.input :description, placeholder: "A few words about your gnome:" %>
<%= f.input :price, placeholder: "What would you like to charge?" %>
<%= f.input :image_path, placeholder: "Upload your image:" %>
<%= f.submit "Submit Gnome", class: "btn-green btn-green-gnome-card" %>
<% end %>
