<h1>Your Private Garden of Gnomes </h1>

  <div class="grid_container">
    <% @gnomes.each do |gnome| %>
        <div>
          <%= image_tag(gnome.image_path, class: "card-img-top") %>
          <div class="card-body">
            <h5 class="card-title"><%= gnome.name %></h5>
            <p class="card-text"><%= gnome.description %></p>
            <h5 class="card-title">Â£ <%= gnome.price %></h5>
            <div class="d-flex justify-content-between mt-3">
              <%= link_to 'More Info', gnome_path(gnome), class: "btn btn-primary btn-sm" %>
              <%= link_to 'Edit', edit_gnome_path(gnome), class: "btn btn-primary btn-sm" %>
              <%= link_to 'Remove', gnome_path(gnome), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm" %>
            </div>
          </div>
        </div>
    <% end %>
  </div>
</div>
